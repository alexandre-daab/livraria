<html>
    <head>
        <meta charset="utf-8">

        <link rel="stylesheet" href="/estatico/css/bootstrap.min.css">
        <link rel="stylesheet" href="/estatico/css/fontawesome.min.css" />
        <link rel="stylesheet" href="/estatico/css/casadocodigo.css" />
    </head>
    <body>
        <h1>Listagem de Autores</h1>
        <table id='autores' class="table table-striped table-bordered table-hover">
            <tr>
                <td>ID</td>
                <td>Nome</td>
                <td>obs</td>
            </tr>
            <tr id="autor_${autor.id}"  for(autor in data.autores)>
                <td>${autor.id}</td>
                <td>${autor.nome}</td>
                <td>${autor.obs}</td>
                <td><a href="/autores/cadastrar/${autor.id}" class="fas fa-pencil-alt" title="Editar"></a></td>
                <td><a href="#" data-ref="${autor.id}" data-type="remocaoAutor" class="fas fa-trash-alt" title="Deletar"></a></td>

            </tr>
        </table>
        <a href="/autores/cadastrar">Inserir Novo Autor</a>
        <script src="/estatico/js/remove-autor.js"></script>        

    </body> 
</html>